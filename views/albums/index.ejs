<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../head') %>
    <title>Albums</title>
  </head>
  <body>
    <%- include('../navbar') %>

    <div class="container mt-5">
      <h1 class="mb-4">Albums</h1>
      <a href="/albums/new" class="btn btn-primary mb-3">Create New Album</a>

      <div class="row">
        <% albums.forEach(function(album) { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= album.title %></h5>
              <p class="card-text"><%= album.description %></p>
              <a href="/albums/<%= album._id %>" class="btn btn-secondary">View Album</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('../footer') %>
  </body>
</html>